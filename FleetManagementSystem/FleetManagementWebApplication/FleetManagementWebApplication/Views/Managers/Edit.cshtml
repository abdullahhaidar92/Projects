@model FleetManagementWebApplication.Models.Manager
@{
    ViewData["Title"] = "Edit";
    Layout = "LayoutManager";
}
    <style>

        .box {
            width: 70%;
            top: 12px;
        }

   
    </style>


    <div class="w3-container w3-padding">
        <div class="box-wrapper" width="100%">
            <div class="box effect6">

                <h3>Edit Account</h3>
                <form asp-controller="Managers" asp-action="Edit">
                    <!--
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div asp-validation-summary="All" class="text-danger"></div>
        -->
                    <h6 class="w3-opacity">Full Name :</h6>
                    <input asp-for="Name" style="width:100%" class="w3-border w3-padding" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <h6 class="w3-opacity"><label asp-for="Email"></label></h6>
                    <input asp-for="Email" style="width:100%" class="w3-border w3-padding" value="@Model.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span class="text-danger">@ViewData["EmailError"]</span>

                    <h6 class="w3-opacity"><label asp-for="Password"></label></h6>
                    <input asp-for="Password" style="width:100%" class="w3-border w3-padding" value="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <h6 class="w3-opacity">ConfirmPassword</h6>
                    <input type="password" name="ConfirmPassword" style="width:100%" class="w3-border w3-padding">
                    <span class="text-danger">@ViewData["PasswordError"]</span>
                    <br>
                    <br>


                    <button type="submit" class="w3-button w3-theme w3-right">
                        Save
                        <!-- <i class='fas fa-angle-double-right'></i> -->
                    </button>
                </form>
            </div>
        </div>

        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
