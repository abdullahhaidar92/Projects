@model Clinic.Models.AddAppointment
<!DOCTYPE html>
@{   
    var date = Model.DateTime.ToString();
}
<html lang="en">
<head>


    
    <style>
         body,html{
        width:100%;
        height:100%;
    }
        .app-container {
            width: 400px;
            border: 2px groove #111FE6;
            padding: 20px 30px;
            text-align: center;
            font-size: 18px
        }
    </style>



</head>

<body>
    <center>


        <br />
        <br />

        <h2>Edit an appointment</h2>
        <h4 class="text-danger">@ViewData["Message"]</h4>
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@ViewData["id"]" />
            <div class="container app-container ">
                <div class="row">
                    <div class='col-sm-12'>

                        <div class="form-group">
                            <label class="control-label">Choose the patient</label>

                            <select asp-for="@Model.SelectPatientId" asp-items="@Model.Patients" class="form-control" style="font-size:20px;height:60px;"></select>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Choose a time</label>
                            <div class='input-group date' id='datetimepicker1'>
                                <input asp-for="@Model.DateTime" value="@date" type='text' class="form-control" style="font-size:20px;height:60px;" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="  Save " class="btn btn-primary btn-lg" style="padding:10px 50px;" />
                        </div>


                    </div>
                    <script type="text/javascript">
                                $(function () {
                                    $('#datetimepicker1').datetimepicker();
                                });
                    </script>

                </div>
            </div>
        </form>
        <script src="./js/prettify-1.0.min.js"></script>
        <script src="./js/base.js"></script>
        <script>
