@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<link rel='stylesheet' href='~/css/font.css' />
<link href="~/lib/fontawesome-free-5.8.2-web/css/all.css" rel="stylesheet">
<link href="~/lib/fontawesome-free-5.8.2-web/js/all.js" rel="stylesheet">
<link rel="stylesheet" href="~/css/admin.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/css/navbar.css" />
<link rel="stylesheet" href="~/lib/w3.css" />
<link rel="stylesheet" href="~/css/window.css" />
<style>

    input[type="email"], input[type="password"],input[type="text"],input[type="tel"]{
        border:3px solid blue;
        width:50%;
        font-size:18px;
    }
    .body{
        color:black;
    }
</style>
<html>
<body>
    <div class="window-wrapper">
        <div class="window">
            <div class="row">
                <div class="col-md-4">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="header">
                            <h1>Create Administrator Account.</h1>
                        </div>
                        <div class="body">


                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label><br />
                                <input asp-for="Input.Email" class="form-control" value="abdullah2@web.com"/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label><br />
                                <input asp-for="Input.Password" class="form-control" value="Aa12345$"/>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label><br />
                                <input asp-for="Input.ConfirmPassword" class="form-control" value="Aa12345$" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.FirstName"></label><br />
                                <input asp-for="Input.FirstName" class="form-control" value="Abdullah"/>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.MiddleName"></label><br />
                                <input asp-for="Input.MiddleName" class="form-control" value="Hadi" />
                                <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.LastName"></label><br />
                                <input asp-for="Input.LastName" class="form-control" value="Haidar" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Phone"></label><br />
                                <input asp-for="Input.Phone" class="form-control" value="(541) 754-3010"/>
                                <span asp-validation-for="Input.Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Mobile"></label><br />
                                <input asp-for="Input.Mobile" class="form-control" value="(541) 754-3010" />
                                <span asp-validation-for="Input.Mobile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="footer">
                            <button type="submit" class="btn btn-secondary" style="font-size:20px;">Register</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </div>

</body>
</html>