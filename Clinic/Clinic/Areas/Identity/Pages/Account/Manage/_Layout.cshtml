
@{
    Layout =  "~/Views/Shared/_Layout.cshtml";;
}
<style>
    a{
        text-decoration:none;
    
    }
    body, html {
            height: 100%;
        }
</style>

<div class="window-wrapper" style="padding-top:20px;">
