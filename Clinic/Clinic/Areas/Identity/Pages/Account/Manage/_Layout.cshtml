        <div class="header">
            Change your account settings
        </div>

        <div class="body">

            <div class="row">
                <div class="col-md-3">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="footer">
            <br />
            </div>
    </div>

</div>




@section Scripts {
    @RenderSection("Scripts", required: false)
}
